{{#each user.posts as |post|}}
<div class="card m-3">
  <h5><a href="/update/{{post.id}}" style="text-decoration:none; color: inherit;">
    <div class="card-header">
    {{post.title}}
  </div></a></h5>

  <div class="card-body">
    <p class="card-text">{{post.content}}</p>
    <p class="card-title">Posted on: {{post.date}}</p>
  </div>
</div>
{{/each}}

<div class="row justify-content-center mt-4">
  <h3 class="make-new">Make a New Post</h3>
</div>

<form class="m-3">
  <div class="form-group">
    <input type="text" class="form-control" id="title" placeholder="Post Title Here">
    <textarea class="form-control" placeholder="Post Content Here" id="post-area" rows="3"></textarea>
    <div class="row justify-content-center">
      <button type="submit" class="btn btn-dark m-2" id="create-post-btn">Create Post</button>
    </div>
  </div>
</form>

<script src="/js/dashboard.js"></script>