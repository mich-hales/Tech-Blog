<div class="row centerit">
  <div class="login-card">
    <form class="form login-form">
      <h2 class="page-title">Login</h2>
      <section class="insides">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" autocomplete="off" type="text" id="email-login"/>
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" autocomplete="off" type="password" id="password-login"/>
      </div>
      </section>
      <div class="form-group">
        <button class="btn btn-primary" id="loginForm" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="login-card">
    <form class="form signup-form">
      <h2 class="page-title">Signup</h2>
      <section class="insides">
      <div class="form-group">
        <label for="username-signup">Name:</label>
        <input class="form-input" autocomplete="off" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" autocomplete="off" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" autocomplete="off" type="password" id="password-signup" />
      </div>
      </section>
     
      <div class="form-group">
        <button class="btn btn-primary" id="signupForm" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
