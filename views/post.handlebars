

<div class="card m-3 p-3">
  <h5 class="card-header">{{post.title}}</h5>

  <div class="card-body">
    <p class="card-title">Posted by: {{post.user.name}} on {{post.date}}</p>
    <p class="card-text">{{post.content}}</p>
  </div>
</div>

<div class="row justify-content-center">
  <h3>Comments:</h3>
</div>

{{#each comm as |com|}}
<div class="card m-3">
  <div class="card-body">
    <p class="card-text">{{com.content}}</p>
    <p class="card-title">Posted by: {{com.user.name}} on {{com.date}}</p>
  </div>
</div>
{{/each}}

<div class="row justify-content-center">
  <h3>Leave a Comment</h3>
</div>

<form class="m-3">
  <div class="form-group">
    <textarea rows="3" class="form-control" placeholder="Leave a comment" id="comment-area"></textarea>
    <div class="row justify-content-center">
      <button class="btn btn-dark m-2" type="submit" id="btn">Submit</button>
    </div>
    
  </div>
</form>
<script src="/js/comment.js"></script>